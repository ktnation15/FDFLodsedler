                    @* @if (Model.BørneGruppes != null)
                    {*@
                    @foreach (var item in Model.BørneGruppes)
                    {


                        <option value="@item.Gruppe_Id">@item.Navn</option>

                    }

                    }




                </select>
                <span asp-validation-for="@Model.børn.GruppeId" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>