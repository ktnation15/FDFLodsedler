@page
@model FDFLodsedler.Pages.Account.LoginModel
@{
}
<br/> <br/>
<h1>For at logge ind på systemet</h1>
<div class="container mt-5">
    <div class="col-sm-12 col-md-12 col-lg-4">

        <h1 class=" mb-3"> Indtast brugernavn og kode</h1>

        <form method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="Login.Email">Indtast din email adresse</label>
                <input type="text" asp-for="Login.Email" class="form-control" />
                <span asp-validation-for="Login.Email" class=" text-danger"></span>

            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Login.Password">Password</label>
                <input type="password" asp-for="Login.Password" class="form-control" />
                <span asp-validation-for="Login.Password" class=" text-danger"></span>

            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" asp-for="Login.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="Login.RememberMe">Husk login og password</label>
            </div>
            <div>
                <a href="/Index" class="btn-link">Tilbage til startsiden</a>
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>
