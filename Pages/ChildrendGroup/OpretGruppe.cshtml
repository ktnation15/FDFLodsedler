@page
@model FDFLodsedler.Pages.ChildrendGroup.OpretGruppeModel
@{
}
<h1>Tilføj BørneGruppe</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.børneGruppe.Navn" class="control-label"></label>
                <input asp-for="@Model.børneGruppe.Navn" class="form-control" />
                <span asp-validation-for="@Model.børneGruppe.Navn" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="@Model.børneGruppe. LederId" class="control-label">Gruppe Leder</label>
               @* <input asp-for="@Model.børneGruppe. LederId" class="form-control" />*@
                <select class=" form-control" asp-for="@Model.børneGruppe. LederId">                    
                    @foreach (var item in Model.Leder)
                    {       
                     <option value="@item.Leder_Id">@item.Navn</option>
                    }
                    }
                </select>                
               <span asp-validation-for="@Model.børneGruppe.LederId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
