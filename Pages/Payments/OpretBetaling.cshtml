@page
@model FDFLodsedler.Pages.Payments.OpretBetalingModel
@{
}
<h1>Opret Betaling</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <input asp-for="@Model.Betalings.Betal_Id" class="form-control " type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Betalings.PaymentMethod" class="control-label"></label>
                <input asp-for="@Model.Betalings.PaymentMethod" class="form-control" />
                <span asp-validation-for="@Model.Betalings.PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Betalings.Amount" class="control-label"></label>
                <input asp-for="@Model.Betalings.Amount" class="form-control" />
                <span asp-validation-for="@Model.Betalings.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Betalings.BørneId" class="control-label">Børn Navn</label>
                <select class=" form-control" asp-for="@Model.Betalings.BørneId">
                    @* @if (Model.BørneGruppes != null)
                    {*@
                    @foreach (var item in Model.Børne)
                    {
                        <option value="@item.Børn_Id">@item.Navn</option>
                    }

                    }




                </select>
                <span asp-validation-for="@Model.Betalings.BørneId" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>